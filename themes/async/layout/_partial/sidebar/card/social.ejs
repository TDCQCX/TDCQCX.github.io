<!-- sidebar social -->
<% if(theme.sidebar.social) { %>
<div class="trm-divider trm-mb-40 trm-mt-40"></div>
<div class="trm-social">
    <% theme.sidebar.social.forEach(item=>{ %>
        <a href="<%- url_for(item.url) %>" title="<%- item.name %>" rel="nofollow" target="_blank">
            <%- icon(item.icon) %>
        </a>
        <a
                class="social-item <%= item.name === '微信' ? 'wechat-item' : '' %>"
                href="<%= item.url %>"
                title="<%= item.title %>"
        <% if(item.name === '微信'){ %> data-qrcode="<%= item.qrcode %>" <% } %>
        >
            <i class="<%= item.icon %>"></i>
            <% if(item.name === '微信'){ %>
                <div class="wechat-qrcode-wrapper">
                    <img class="wechat-qrcode" src="<%= item.qrcode %>" alt="微信二维码">
                    <div class="qrcode-arrow"></div>
                </div>
            <% } %>
        </a>
    <%})%>
</div>
<% } %>
<!-- sidebar social end -->